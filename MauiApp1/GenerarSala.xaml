<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.GenerarSalaPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Column="0" Padding="10">
            <Entry x:Name="TokenEntry" Placeholder="Escribe el token (código)" Margin="0,0,0,10" />
            <Button Text="Generar código" Clicked="OnGenerateCodeClicked" Margin="0,0,0,10" />
            <Image x:Name="QRCodeImage" Margin="0,0,0,10" />
            <Button Text="Guardar código" Clicked="OnSaveCodeClicked" Margin="0,0,0,10" />
        </StackLayout>

        <StackLayout Grid.Column="1" Padding="10">
            <Picker x:Name="NumberPicker" Title="Selecciona un número" Margin="0,0,0,10">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:Int32}">
                        <x:Int32>1</x:Int32>
                        <x:Int32>2</x:Int32>
                        <x:Int32>3</x:Int32>
                        <x:Int32>4</x:Int32>
                        <x:Int32>5</x:Int32>
                        <x:Int32>6</x:Int32>
                        <x:Int32>7</x:Int32>
                        <x:Int32>8</x:Int32>
                        <x:Int32>9</x:Int32>
                        <x:Int32>10</x:Int32>
                        <x:Int32>11</x:Int32>
                        <x:Int32>12</x:Int32>
                        <x:Int32>13</x:Int32>
                        <x:Int32>14</x:Int32>
                        <x:Int32>15</x:Int32>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label Text="Personas que se están uniendo:" FontAttributes="Bold" />
            <ListView x:Name="PersonListView">
                <!-- Aquí se llenará la lista de personas -->
            </ListView>
        </StackLayout>
    </Grid>

</ContentPage>